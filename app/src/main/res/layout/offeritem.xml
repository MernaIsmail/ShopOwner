<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#e6e6e6"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <ImageView
                android:id="@+id/offerImg"
                android:layout_width="188dp"
                android:layout_height="188dp"
                android:scaleType="fitXY"
                android:src="@drawable/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/Discountdifferencez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Discountdifference"/>

            <TextView
                android:id="@+id/titlteoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:hint="title"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/descriptionoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="descriptionoffer"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/beforeoffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="11"
                  />
                <TextView
                    android:id="@+id/afteroffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/editLayout"
                    android:layout_width="75dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#4a778f"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/editBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:padding="12.5dp"
                        android:background="@drawable/edit"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/deleteLayout"
                    android:layout_width="75dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#4a778f"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/delete"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:id="@+id/img"
                        android:padding="10.1dp"
                        android:text="delete"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

    </LinearLayout>



</LinearLayout>